# Moose configuration example (env defaults; can be overridden per request)
# API key is required for all endpoints.
MOOSE_API_KEY=change_me
# OpenRouter base URL (API key is provided per request).
MOOSE_OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
# Ollama host URL (token is provided per request if required).
MOOSE_OLLAMA_HOST=https://ollama.com

# Host ports to avoid conflicts.
MOOSE_API_PORT=8000
MOOSE_DEMO_PORT=8501

MOOSE_TIMEOUT_SECS=300

# Queue storage (MongoDB)
# Use mongodb://mongo:27017 for docker-compose, or mongodb://localhost:27017 for local runs.
MOOSE_MONGO_URL=mongodb://mongo:27017
MOOSE_MONGO_DB=moose

# Worker/queue settings
MOOSE_WORKER_COUNT=4
MOOSE_QUEUE_MAXSIZE=1000
MOOSE_MAX_RETRIES=2

# API web server settings
# Used by docker-compose.prod.yml to set uvicorn worker count.
MOOSE_WEB_CONCURRENCY=4

# DeepInfra (OpenAI-compatible)
MOOSE_DEEPINFRA_BASE_URL=https://api.deepinfra.com/v1/openai
# Optional default (normally provided per request via X-LLM-API-Key)
MOOSE_DEEPINFRA_API_KEY=

# DeepSeek (OpenAI-compatible)
MOOSE_DEEPSEEK_BASE_URL=https://api.deepseek.com
# Optional default (normally provided per request via X-LLM-API-Key)
MOOSE_DEEPSEEK_API_KEY=
