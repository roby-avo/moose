# Moose configuration example (env defaults; can be overridden per request)
# API key is required for all endpoints.
MOOSE_API_KEY=change_me
MOOSE_LLM_PROVIDER=ollama
MOOSE_MODEL=llama3
# For Docker Desktop on macOS/Windows, use http://host.docker.internal:11434
MOOSE_OLLAMA_HOST=http://localhost:11434
MOOSE_OLLAMA_TOKEN=

# OpenRouter (use when MOOSE_LLM_PROVIDER=openrouter)
MOOSE_OPENROUTER_API_KEY=
MOOSE_OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Queue storage (MongoDB)
# Use mongodb://mongo:27017 for docker-compose, or mongodb://localhost:27017 for local runs.
MOOSE_MONGO_URL=mongodb://mongo:27017
MOOSE_MONGO_DB=moose
MOOSE_MONGO_TIMEOUT_SECS=2

# Worker/queue settings
MOOSE_WORKER_COUNT=4
MOOSE_QUEUE_MAXSIZE=1000
MOOSE_MAX_RETRIES=2
